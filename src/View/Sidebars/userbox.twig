<section id="account-control" class="box">
	<header>
		Account Control
	</header>
	<div class="content">

		{% if user.id is not defined %}
			<form data-event="submit" data-action="login" method="post" action="javascript:void(0)">
				<div class="form-group">
					<label>Username</label>
					<input required type="text" class="form-control" name="username" placeholder="Username" />
				</div>
				<div class="form-group">
					<label>Password</label>
					<input required type="password" class="form-control" name="password" placeholder="Password" />
					<p class="help text-right">
						<a href="/{{ config('board', 'base') }}">
							Forgot password?
						</a>
					</p>
				</div>

				<div class="text-center">
					<button class="btn btn-orange">
						Login
					</button>

					<a class="btn btn-orange" href="/{{ config('board', 'base') }}signup">
						Signup
					</a>
				</div>
			</form>

		{% else %}

			<div class="row">
				<div class="col-md-4">
					<div class="avatar big">
						<img width="149" height="198" src="{{ avatar_root }}/{{ user.username }}/big.png" alt="" />
					</div>		
				</div>
				<div class="text-right col-md-8">
					<a href="/{{ config('board', 'base') }}" class="user-link">
						{{ user.username }}
					</a>

					<div id="userbox-options">
						<div class="clearfix">
							<div class="pull-left">
								<a class="marginRight10" href="/{{ config('board', 'base') }}user/{{ user.username }}">
									<em class="fa fa-user"></em> Profile
								</a>
							</div>
							<div class="pull-right">
								<a href="/{{ config('board', 'base') }}user/settings">
									Messages <em class="fa fa-envelope-o"></em>
								</a>
							</div>
						</div>
						<div class="clearfix">
							<div class="pull-left">
								<a class="marginRight10" href="/{{ config('board', 'base') }}user/settings">
									<em class="fa fa-exclamation-triangle"></em> Alerts
								</a>
							</div>
							<div class="pull-right">
								<a href="/{{ config('board', 'base') }}user/settings">
									Settings <em class="fa fa-cogs"></em>
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="seperator"></div>
			<a class="btn btn-orange" javascript:void(0)" data-user="{{ user.username }}" data-event="click" data-action="logout">
				Logout
			</a>
		{% endif %}

	</div>
</section>