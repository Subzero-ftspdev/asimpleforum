<div class="row marginBottom30" id="member-list">	
	{% for member in members %}
		<div class="member col-sm-4">
			<div class="row">
				<div class="col-sm-4">
					<img class="avatar tiny" alt="" title="" src="{{ avatar_root }}/{{ member.username }}/tiny.png" />
					<a href="{{ path('user-profile', {username: member.username}) }}" class="user-link username">
						{{ member.username }}
					</a>
				</div>
				<div class="col-sm-8 blue">
					<p><em class="fa fa-comment"></em> {{ member.topics }}</p>
					<p><em class="fa fa-comments"></em> {{ member.posts }}</p>
					<p class="date">{{ member.regdate|toDate }}</p>
				</div>
			</div>	
		</div>	
	{% endfor %}
</div>