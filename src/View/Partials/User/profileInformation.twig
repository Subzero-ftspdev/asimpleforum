<form role="form" method="post" action="javascript:void(0)" class="form-horizontal" id="avatar-form">
	<div class="form-group">
		<div class="col-sm-3">
			<label class="control-label">
				Avatar
			</label>	
		</div>
		<div class="col-sm-6">
			<div class="marginBottom10 alignBottom" id="avatar-list">
				<img class="inline avatar large" src="{{ avatar_root }}/{{ user.username }}/large.png" />
				<img class="inline avatar medium" src="{{ avatar_root }}/{{ user.username }}/medium.png" />
				<img class="inline avatar small" src="{{ avatar_root }}/{{ user.username }}/small.png" />
				<img class="inline avatar tiny" src="{{ avatar_root }}/{{ user.username }}/tiny.png" />
			</div>
			<div class="file-input">
				<button class="btn btn-orange">
					Choose a new image
				</button>
				<input type="file" name="avatar" />
			</div>
		</div>
	</div>
</form>

<form role="form" method="post" action="javascript:void(0)" class="form-horizontal">
	<div class="form-group">
		<div class="col-sm-3">
			<label class="control-label">
				Username
			</label>	
		</div>
		<div class="col-sm-6">
			<input disabled type="text" class="form-control" value="{{ user.username }}" />
			<p class="help-block">
				Your username cannot be changed
			</p>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-3">
			<label class="control-label">
				Location
			</label>	
		</div>
		<div class="col-sm-6">
			<input data-event="return" data-action="user.saveLocation" type="text" class="form-control" name="location" value="{{ profile.location }}" />
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-3">
			<label class="control-label">
				Name
			</label>	
		</div>
		<div class="col-sm-6">
			<input data-event="return" data-action="user.saveName" type="text" class="form-control" placeholder="Name" name="name" value="{{ profile.name }}" />
			<p class="help-block">
				Your full name will be displayed on your profile
			</p>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-3">
			<label class="control-label">
				Birthday (dd-mm-yyyy)
			</label>	
		</div>
		<div class="col-sm-6">
			{% if profile.dob %}
				{% set dob = profile.dob|date('d-m-Y') %}
			{% else %}
				{% set dob = "now"|date('d-m-Y') %}
			{% endif %}
			<input data-event="return" data-action="user.saveDOB" data-date-format="dd-mm-yyyy" type="text" name="dob" value="{{ dob }}" class="form-control calander" />
		</div>
	</div>

</form>