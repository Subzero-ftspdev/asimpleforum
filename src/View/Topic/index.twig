						<div class="form-group">
							<div class="col-md-1">
								Title
							</div>
							<div class="col-sm-11">
								<input type="text" name="name" class="form-control" value="RE: {{ topic.name }}" />
							</div>
						</div>
						<div class="form-group">
							<div class="col-md-1">
								Body
							</div>
							<div class="col-sm-11">
